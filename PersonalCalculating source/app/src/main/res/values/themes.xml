<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PersonalCalculatingApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PersonalCalculatingApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PersonalCalculatingApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PersonalCalculatingApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/iransans</item>
    </style>

    <style name="SimpleTitleTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">right</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SimpleTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="SimpleDescTextView">
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">right</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="formMaterialEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/iransans</item>
    </style>

    <style name="defaultButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_blue_button</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/iransans</item>
    </style>
</resources>